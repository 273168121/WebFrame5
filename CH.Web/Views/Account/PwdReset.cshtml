@{
    ViewBag.Title = "修改密码";
    Layout = "/Views/Shared/_Layout.cshtml";
     
}
@section  head
{


    <script type="text/javascript" src="~/Scripts/core/knockout.binding.js"></script>  
    <script type="text/javascript" src="~/Scripts/bz/ViewModel/userPwdReset.js"></script>
    <style type="text/css">
        .panel {
            margin-top: 80px;
        }

        td {
            white-space: nowrap;
        }

        .error {
            color: #ff0000;
        }
    </style>
}
<body>


    <div class="easyui-panel" title="修改密码" style="width:400px;margin:0 auto">
        <div style="padding:10px 60px 20px 60px">
            <form id="ff" method="post">
                <table cellpadding="5" style="margin:auto">
                    <tr>
                        <td>新密码:</td>
                        <td><input id="password1" class="easyui-textbox" type="password" data-options="required:true" data-bind="textbox_value:userPwd1" /> </td>
                    </tr>
                    <tr>
                        <td>确认密码:</td>
                        <td><input class="easyui-textbox" type="password" data-options="required:true" data-bind="textbox_value:userPwd2" validtype="matchs['#password1']" />  </td>
                    </tr>
                   
                </table>
                <div class="error"></div>
            </form>
            <div style="text-align:center;padding-top:10px;  padding-left:20px; ">
                <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-accept" data-bind="click:submit">提交</a>
                <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-remove" data-bind="click:clear">清空</a>
            </div>
        </div>
    </div>

    <script type="text/javascript">

        //文档执行才能绑定
        $(function () {

            var m_userPwdReset = new CH.viewModel.userPwdReset('@ViewBag.token');
            ko.applyBindings(m_userPwdReset);
        });

    </script>

</body>
